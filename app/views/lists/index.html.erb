<h1>投稿一覧</h1>

<% @lists.each do |list| %>

  <p>タイトル</p>

  <span>
    <%= link_to list.title, lists_path(list.id) %>
  </span>

  <p>画像</p>
  <% if @list.image.attached? %>
    <%= image_tag @list.image, size: "300x300" %>
  <% else %>
    <%= image_tag 'no_image', size: "300x300" %>
  <% end %>

  <%= image_tag @list.image, size: "300×300" %>

<% end %>